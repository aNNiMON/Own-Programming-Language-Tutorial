use canvas, std

w = 640 h = 480
window("Управление точкой", w, h)

x = rand(w) y = rand(h)

run = 1
while run {
  key = keypressed()
  if (key == VK_LEFT  && x > 0) x--
  else if (key == VK_RIGHT && x < w) x++
  else if (key == VK_UP    && y > 0) y--
  else if (key == VK_DOWN  && y < h) y++
  else if key == VK_ESCAPE run = 0

  color(255,255,255)
  frect(0,0,w,h)
  color(0)
  line(0, h, x, y)
  line(w, h, x, y)
  repaint()
  sleep(10)
}